@model CAF.WebSite.DevTools.ProfilerSettings


@Html.Action("SiteScopeConfiguration", "Setting", new { area = "Admin" })
@using (Html.BeginForm())
{

    <div class="form-body">
        <div class="form-group">
            <label class="control-label col-md-3">@Html.LangLabelFor(model => model.EnableMiniProfilerInPublicStore)</label>
            <div class="col-md-6">
                <div class="input-group input-medium">
                    @* @Html.EditorFor(model => model.EnableMiniProfilerInPublicStore)*@
                    @Html.SettingEditorFor(model => model.EnableMiniProfilerInPublicStore)
                    @Html.ValidationMessageFor(model => model.EnableMiniProfilerInPublicStore)
                </div>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-3"></label>
            <div class="col-md-3">
                <button type="submit" name="save" value="save" class="btn btn-primary">
                    <i class="fa fa-check"></i>
                    @T("Admin.Common.Save")
                </button>
            </div>
        </div>
    </div>

}
